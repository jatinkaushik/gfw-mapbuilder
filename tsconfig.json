{
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "js/*": ["src/js/*"],
      "css/*": ["src/css/*"],
      "images/*": ["src/images/*"]
    },
    "lib": ["dom", "es2015.promise", "esnext"],
    "target": "es6",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "declaration": false,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "importHelpers": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "strictPropertyInitialization": false,
    "types": ["arcgis-js-api", "moment", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "files": ["custom.d.ts"]
}
